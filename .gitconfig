[user]
    name         = banyan
    email        = ameutau@gmail.com
[core]
    excludesfile = /Users/kohei/.gitignore
    pager        = less -r
    editor       = /usr/bin/vim
[color]
    diff         = auto
    status       = auto
    branch       = auto
    interactive  = auto
[color "branch"]
    current      = yellow reverse
    local        = yellow
    remote       = green
[color "diff"]
    meta         = yellow bold
    frag         = magenta bold
    old          = red bold
    new          = green bold
[color "status"]
    added        = yellow
    changed      = green
    untracked    = cyan
[alias]
    ci           = commit
    amend        = commit --amend -C HEAD
    co           = checkout
    s            = status
    st           = status
    sti          = status --ignore-submodules
    d            = diff
    di           = diff
    dii          = diff --ignore-submodules
    dic          = diff --cached
    dc           = diff --cached
    dci          = diff --cached --ignore-submodules
    difflog      = log -p HEAD@{3.days.ago}
    l            = log --pretty=format:\"%h (%an): %s\" --date=short -20
    ls           = log --stat -p -1
    cob          = checkout -b
    b            = branch
    br           = branch
    sh           = !git-sh
    a            = add
    aa           = add -A
    sa           = stash
    sap          = stash pop
    r            = reset
    svnci        = svn dcommit
    svnre        = svn rebase
    m            = merge
    graph        = log --graph --date-order -C -M --pretty = format:\"<%h> %ad [%cn] %Cgreen%d%Creset %s\" --all --date = short
    sub          = submodule
    ft           = -n --prune
    ftt          = fetch -n --prune origin refs/heads/*:refs/remotes/origin/* refs/tags/*:refs/tags/origin/*
[github]
    user         = banyan
    token        =
